<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:theme="@style/information"
    android:visibility="visible">

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MapActivity"
        tools:layout="@layout/activity_maps" />

    <RelativeLayout
        android:id="@+id/informations"
        android:onClick="extendInformation"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:background="#8C8C8C">

        <TextView
            android:id="@+id/information"
            android:onClick="extendInformation"
            android:layout_width="100dp"
            android:layout_height="12dp"
            android:background="#000000"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"/>
        <TextView
            android:id="@+id/info1"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:visibility="invisible"
            android:layout_marginTop="30dp"/>

        <TextView
            android:id="@+id/info2"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_below="@id/info1"
            android:visibility="invisible"
            />

        <TextView
            android:id="@+id/info3"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_below="@id/info2"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/info4"
            android:layout_marginTop="30dp"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@id/info1"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/info5"
            android:layout_marginStart="20dp"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_toEndOf="@id/info2"
            android:layout_below="@id/info4"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/info6"
            android:layout_marginStart="20dp"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_toEndOf="@id/info3"
            android:layout_below="@id/info5"
            android:visibility="invisible" />
    </RelativeLayout>
</RelativeLayout>

